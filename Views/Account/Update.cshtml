@model App_Azure_OpenId.Models.UpdateUserViewModel

@{
	ViewData["Title"] = "Actualizar Usuario";
}

<div class="container mt-4">
	<div class="row">
		<div class="col-md-8 offset-md-2">
			<div class="card">
				<div class="card-header">
					<h3 class="card-title">Actualizar Usuario</h3>
				</div>
				<div class="card-body">
					<form asp-action="UpdateUserApi" method="post">
						<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
						<input type="hidden" asp-for="Id" />

						<div class="mb-3">
							<label asp-for="DisplayName" class="form-label">Nombre Completo</label>
							<input asp-for="DisplayName" class="form-control" />
							<span asp-validation-for="DisplayName" class="text-danger"></span>
						</div>

						<div class="mb-3">
							<label asp-for="GivenName" class="form-label">Nombre</label>
							<input asp-for="GivenName" class="form-control" />
							<span asp-validation-for="GivenName" class="text-danger"></span>
						</div>

						<div class="mb-3">
							<label asp-for="JobTitle" class="form-label">Título trabajo</label>
							<input asp-for="JobTitle" class="form-control" />
							<span asp-validation-for="JobTitle" class="text-danger"></span>
						</div>

						<div class="d-flex justify-content-between">
							<a asp-action="Index" class="btn btn-secondary">
								<i class="fas fa-arrow-left"></i> Volver
							</a>
							<button type="submit" class="btn btn-primary">
								<i class="fas fa-save"></i> Actualizar
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}